{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "checkJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "target": "ES5",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/*/"
  ],
  "exclude": [
    "../node_modules",
    "*/.spec.ts",
    "*/.test.ts"
  ]
}